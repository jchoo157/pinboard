.col-md-6.col-md-offset-3
  .row
    .panel.panel-default
      .panel-heading
        %h2 Edit
      .panel-body
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!

          .form-group
            = f.input :email, required: true, autofocus: true, input_html: { class: 'form-control'}

          .form-group
            - if @minimum_password_length
              %em
                = "(#{@minimum_password_length} characters minimum)"
            = f.input :password, autocomplete: 'off', required: false

          .form-group
            = f.input :password_confirmation, autocomplete: 'off'
          .form-group
            = f.input :current_password, hint: 'Type new password here', required: true, input_html: {class: 'form-control'}

          .form-actions
            = f.button :submit, 'Update', class: 'btn btn-primary'
          %br

        .panel-footer
          %h3 Cancel my account

          %p Unhappy? #{link_to 'Cancel my account', registration_path(resource_name), data: {confirm: 'Are you sure?'}, method: :delete}

