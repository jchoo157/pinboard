.col-md-6.col-md-offset-3
  .row
    .panel.panel-default
      .panel-heading
        %h2 Sign up
      .panel-body
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!

          .form-group
            = f.input :email, required: true, autofocus: true, input_html: { class: 'form-control'}

          .form-group
            = f.input :password, autocomplete: 'off', required: false, hint: 'password must be at least 8 characters'

          .form-group
            = f.input :password_confirmation, autocomplete: 'off'

          .form-actions
            = f.button :submit, 'Sign up', class: 'btn btn-primary'
          %br

        .panel-footer
          %p Already signed up? #{link_to 'Log in', user_session_path}

